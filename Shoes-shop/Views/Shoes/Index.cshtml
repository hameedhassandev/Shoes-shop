@model IEnumerable<Shoes_shop.Models.Shoes>

@{
    ViewData["Title"] = "Index | Shoes";
}

<h1>Shoes List</h1>
<hr/>
<div class="text-white">
     <a href="@Url.Action("Create")"  class="btn btn-primary">  
          <i class="fa fa-plus" aria-hidden="true"></i>

         Add New Shoes
     </a>
  @*  <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
 <i class="fa fa-plus" aria-hidden="true"></i>
 Add New Shoes
</button>*@

</div><br />
@if(!Model.Any()){

    <div class="alert alert-warning">
        No Shoes added yet!
    </div>
}else{
<div class="content mt-5">

    <table class="table">
    <thead>
        <tr>
             <th>
                Image
            </th>
            <th>
                Shoes Name
            </th>
            <th>
                Category
            </th>
            <th>
               Short Description
            </th>
            <th>
               Shoes Size
            </th>
            <th>
                Price (L.E)
            </th>
            <th>
                No. In Stock
            </th>
       
            
            <th >
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">
               <img src="~/images/@item.ImageURL" style="width:75px;height:75px" />
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td class="align-middle" style="max-width: 200px;   overflow: hidden;text-overflow: ellipsis ; white-space: nowrap; ">

                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td >
             <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.NumberInStock)
            </td class="align-middle">
            
          
            <td >
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i> Edit</a>
                <a class="btn btn-success"  asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i> Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ....
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
}

