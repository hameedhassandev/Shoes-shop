@model IEnumerable<Shoes_shop.Models.Order>


@{
    ViewData["Title"] = "All Confirmed Order";
}

<h2>Confirmed Orders</h2>
<hr />


<br />
@if (!Model.Any())
{

    <div class="alert alert-warning">
        No Orders under confirmation yet, check shipped and pay order!
    </div>
}
else
{
    <div class="content mt-8">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Order No.
                    </th>
                    <th>
                        User Name
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Added At
                    </th>

                    <th>
                        Shipping Address
                    </th>
                    <th>
                        Contact Number
                    </th>
                    <th>
                        Total Price
                    </th>

                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @item.Id
                        </td>
                        <td class="align-middle">
                            @item.User.FullName
                        </td>
                        <td class="align-middle">
                            @item.User.Gender
                        </td>
                        <td class="align-middle">
                            @item.dateTime
                        </td>

                        <td class="align-middle" style=" max-width: 120px;">
                            @item.ShippingAddress
                        </td>


                        <td class="align-middle">
                            @item.Contact
                        </td>
                        <td class="align-middle">
                            EGP @item.TotalPrice
                        </td>

                        <td>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Shipping & Pay</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}