@model Shoes_shop.ViewModels.OrderShipingVM

@{
    ViewData["Title"] = "Shipping Deatils";
}


<div class="content mt-5">
    <div class="container">
        <h2>Edite Your Shipping</h2>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form enctype="multipart/form-data" asp-action="EditeShippingConfirm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group my-3">
                        <label asp-for="Address" class="control-label"></label>
                        <textarea asp-for="Address" class="form-control" >
                        </textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group my-3">
                        <label asp-for="Contact" class="control-label"></label>
                        <input asp-for="Contact" class="form-control" autocomplete="off" />

                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>
                    <input asp-for="Id" class="form-control"type="hidden"/>

                    <div class="form-group my-3">
                        <input type="submit" value="Update Shipping" class="btn btn-primary" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Back to Orders</a>
                    </div>



                </form>

            </div>
        
        </div>

    </div>
</div>
@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}